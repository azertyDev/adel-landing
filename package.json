{
  "name": "adel-landing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter client dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:all": "concurrently -n admin,client \"pnpm dev:admin\" \"pnpm dev\"",
    "dev:seed": "concurrently -n admin,client \"SEED_DATABASE=true pnpm dev:admin\" \"pnpm dev\"",
    "build": "pnpm --filter client build",
    "build:admin": "pnpm --filter admin build",
    "build:all": "pnpm build:admin && pnpm build",
    "start": "pnpm --filter client start",
    "start:admin": "pnpm --filter admin start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "pnpm --filter client typecheck",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{json,md,yml,yaml}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "@swc/core",
      "@parcel/watcher"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
